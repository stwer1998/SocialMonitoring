@{
    ViewData["Title"] = "Социальный мониторинг";
}
@model Models.Dto.ParserSettingDto

<div class="row justify-content-md-center">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header text-center">
                @Model.Name
            </div>
            <div class="card-body col-md-12">
                @foreach (var item in Model.Settings)
                {
                    <div class="form-group col-md-12">
                        <label>@item.Key</label><br />
                        <textarea class="col-md-12" type="text">@item.Value</textarea>
                    </div>
                }
            </div>
        </div>
    </div>
</div>